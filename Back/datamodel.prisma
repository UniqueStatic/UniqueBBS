type Group {
  id: ID! @unique
  name: String!
  master: User
}
type User {
  id: ID! @unique
  username: String!
  openid: Int!
  isAdmin: Boolean! @default(value:false)
  group: [Group!]!
  posts: Int! @default(value: 0)
  lastLogin: DateTime!
  signature: String! @default(value: "")
  mentor: User
}
type Forum{
  id: ID! @unique
  name: String!
  threads: Int! @default(value: 0)
  lastPost: Post
}
type Post{
  id: ID! @unique
  forum: Forum!
  user: User!
  thread: Thread!
  isFirst: Boolean! @default(value:false)
  quote: Int! @default(value:-1)
  message: String!
}
type Thread{
  id: ID! @unique
  user: User! 
  forum: Forum!
  subject: String!
  post: [Post!]!
  top: Boolean! @default(value:false)
  closed: Boolean! @default(value:false)
  diamond: Boolean! @default(value:false)
  attach: [Attach!]!
}
type Attach{
  id: ID! @unique
  user: User!
  post: Post!
  thread: Thread!
  forum: Forum!
  filesize: Int!
  downloads: Int! @default(value:0)
  fileName: String!
}
type Message{
  id: ID! @unique
  fromUser: User! @relation(name:"MsgFromUser")
  toUser: User! @relation(name:"MsgToUser")
  message: String!
}